# Environment Variables Template
# Copy this to .env and fill in actual values

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_ASG_NAME=self-adaptive-asg

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here
AZURE_RESOURCE_GROUP=self-adaptive-rg
AZURE_VMSS_NAME=self-adaptive-vmss

# GCP Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GCP_PROJECT_ID=your_project_id_here
GCP_INSTANCE_GROUP=self-adaptive-ig
GCP_ZONE=us-central1-a

# System Configuration
LOG_LEVEL=INFO
SAMPLING_INTERVAL=1.0
MAX_SAMPLES=1000

# Anomaly Detection
CONTAMINATION_RATE=0.05
ANOMALY_PROBABILITY_THRESHOLD=0.7

# Recovery
RECOVERY_EXECUTOR_TYPE=local  # or 'cloud'
MAX_RECOVERY_ATTEMPTS=3
RECOVERY_TIMEOUT_SECONDS=300

# Monitoring
ENABLE_CLOUDWATCH=false  # Set to true for AWS
ENABLE_AZURE_MONITOR=false  # Set to true for Azure
ENABLE_GCP_MONITORING=false  # Set to true for GCP

# Notifications
ENABLE_EMAIL_ALERTS=false
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts

# Database (optional)
DB_TYPE=sqlite  # or 'postgresql', 'mysql'
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_password_here
DB_NAME=self_adaptive_db
